<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid android:color="#0f0f0f"/>
        <stroke android:color="#fff0f0" android:width="2dp"/>
        <corners android:radius="8dp"/>
        <stroke android:dashGap="1dp"/>
        <gradient
            android:type="radial"
            android:gradientRadius="150dp"
            android:startColor="#070000" android:endColor="#070000"
            android:centerColor="#4C0001"
            />

    </shape>
</item>
</selector>